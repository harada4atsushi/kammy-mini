#order_new{'data-role': 'page'}
  %div{'data-role': 'header', 'data-add-back-btn': "true", 'data-position': 'fixed'}
    %h1 オーダー作成
  %div{'role': "main", class: 'ui-content'}
    .photo-items-area

    %div{"data-role" => "collapsible", 'data-collapsed' => "false"}
      %h4 希望する雰囲気
      %form
        %div{class: 'ui-field-contain coise-slider'}
          %div{class: 'sliaderItem'}
            %span ボーイッシュ
            %span ガーリー
            %input.slide1{'type': 'range', 'min':'0', 'max':'4', 'step':'1', 'value':'2'}
          %div{class: 'sliaderItem'}
            %span クール
            %span カワイイ
            %input.slide2{'type': 'range', 'min':'0', 'max':'4', 'step':'1', 'value':'2'}
          %div{class: 'sliaderItem'}
            %span 知的
            %span ゆるふわ
          %input.slide3{'type': 'range', 'min':'0', 'max':'4', 'step':'1', 'value':'2'}


    %div{"data-role" => "collapsible"}
      %h4 自分の特徴
      %p I'm the collapsible content. By default I'm closed, but you can click the header to open me.

    %div{"data-role" => "collapsible"}
      %h4 過去の失敗
      %p I'm the collapsible content. By default I'm closed, but you can click the header to open me.

    %a#order{href:'#order', class:'ui-btn'}オーダーする
